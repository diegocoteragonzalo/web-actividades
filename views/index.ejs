<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>cotera.es Tecnología y Diseño Web</title>
  </head>
  <body>

	<header>
    		<h1>cotera.es Tecnología y Diseño Web</h1>
    </header>
    <article>
        <p>Edificio Impulsa</p>
        <p>Parque Científico Tecnológico de Gijón</p>
        <p>Los Prados, 166</p>
        <p>33203 Gijón</p>
        <p>Asturias</p>
    </article>

    <article>
    	<h2>Activities</h2>
    	<ul>
	    	<% activities.forEach( (activity) => { %>
	    		<li> <%= activity.name %> <%= activity.money %> </li>
	    	<% }) %>   
    	</ul>
    	<form method="POST" action="/activities/donate">
    		<input placeholder="your name" type="text" name="userName">
    		<input placeholder="password" type="text" name="password">
    		<select name="activityName">
	    		<% activities.forEach( (activity) => { %>
		    		<option value=<%= activity.name %>><%= activity.name %></option>
		    	<% }) %>
    		</select>
    		<input placeholder="amount of money" type="text" name="money">
    		<button type="submit">Donate</button>
    	</form> 		
    </article>

    <footer>
